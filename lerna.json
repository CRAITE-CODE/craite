{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "allowBranch": ["main", "release/*"],
      "message": "chore(release): version %s"
    }
  },
  "packages": ["packages/*"]
}
